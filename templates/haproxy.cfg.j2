# Global settings
#---------------------------------------------------------------------
global
    maxconn     20000
    log         /dev/log local0 info
    chroot      /var/lib/haproxy
    pidfile     /var/run/haproxy.pid
    user        haproxy
    group       haproxy
    daemon

    # turn on stats unix socket
    stats socket /var/lib/haproxy/stats
    ssl-default-bind-ciphers PROFILE=SYSTEM
    ssl-default-server-ciphers PROFILE=SYSTEM

defaults
    mode                    http
    log                     global
    option                  httplog
    option                  dontlognull
    option http-server-close
    option forwardfor       except 127.0.0.0/8
    option                  redispatch
    retries                 3
    timeout http-request    10s
    timeout queue           1m
    timeout connect         10s
    timeout client          300s
    timeout server          300s
    timeout http-keep-alive 10s
    timeout check           10s
    maxconn                 20000

listen stats :9000
mode http
    stats enable
    stats uri /

### OpenShift API Server Config
listen api-server-6443 
  bind *:6443
  mode tcp
  option  httpchk GET /readyz HTTP/1.0
  option  log-health-checks
  balance roundrobin
{% if include_bootstrap is defined and include_bootstrap | bool %}
{% if bootstrap | d([]) | length > 0 %}
  server bootstrap bootstrap.{{ cluster_name }}.{{ cluster_base_domain }}:6443 verify none check check-ssl inter 10s fall 2 rise 3 backup 
{% endif %}
{% endif %}
{% if masters | d([]) | length > 0 %}
{% for host in masters %}
{% if host.name is defined and host.name !='' %}
  server master{{ loop.index0 }} {{ host.name }}.{{ cluster_name }}.{{ cluster_base_domain }}:6443 weight 1 verify none check check-ssl inter 10s fall 2 rise 3
{% else %}
  server master{{ loop.index0 }} master{{ loop.index0 }}.{{ cluster_name }}.{{ cluster_base_domain }}:6443 weight 1 verify none check check-ssl inter 10s fall 2 rise 3
{% endif %}
{% endfor %}
{% endif %}

